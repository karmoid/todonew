<h1>Entités</h1>

<%= link_to image_tag("csv.jpg", :border=>0), params.merge(:format => :csv), :action => :index %>
<table>
  <tr>
    <th>Nom</th>
    <th>Description</th>
    <th>Note</th>
    <th></th>
    <th></th>
  </tr>

<% @entities.each do |entity| %>
  <tr>
    <td><%= link_to entity.name, entity %></td>
    <td><%= entity.description %></td>
    <td><%= entity.note %></td>
    <td><%= link_to 'Modifie', edit_entity_path(entity) %></td>
    <td><%= link_to 'Détruit', entity, :confirm => 'Êtes-vous sûr?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Nouvelle entité', new_entity_path %>
