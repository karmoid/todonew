<h1>Environnements</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Description</th>
    <th>Note</th>
    <th></th>
    <th></th>
  </tr>

<% @environments.each do |environment| %>
  <tr>
    <td><%= link_to environment.name, environment %></td>
    <td><%= environment.description %></td>
    <td><%= environment.note %></td>
    <td><%= link_to 'Modifie', edit_environment_path(environment) %></td>
    <td><%= link_to 'Détruit', environment, :confirm => 'Êtes-vous sûr?', :method => :delete %></td>
  </tr>
<% end %>
</table>

