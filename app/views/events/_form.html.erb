<%= form_for [@parent,@event] do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :operation_id %><br />
    <%= f.select :operation_id, @operations.collect {|s| [s.opegroup.description + " - " + s.description , s.id]} %>
  </div>
  <div class="field">
  	<table>
  		<tr>
  			<td>
    <%= f.label :planned %><br />
    <%= f.date_select :planned  %>
  			</td>
  			<td>
    <%= f.label :done %><br />
    <%= f.date_select :done, :include_blank => 'true', :default => 'nil' %>
  			</td>
  			<td>
    <%= f.label :cancelled %><br />
    <%= f.date_select :cancelled, :include_blank => 'true', :default => 'nil' %>
  			</td>
  		</tr>
  	</table>
  </div>
  <div class="field">
    <%= f.label :all_day %><br />
    <%= f.check_box :all_day, {}, "1", "0" %>
  	
  </div>

  <div class="field">
  	<table>
  		<tr><td>
    		<%= f.label :note %><br />
    		<%= f.text_area :note %>
  		</td>
  		<td>
    		<%= f.label :status %><br />
    		<%= f.text_area :status %>
  		</td></tr>
  	</table>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
